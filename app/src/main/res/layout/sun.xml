                android:textAlignment="center" />

            <TextView
                android:id="@+id/CivilDawn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="--"
                android:textAlignment="center" />
        </LinearLayout>

